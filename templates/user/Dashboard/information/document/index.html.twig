{% extends "user/Dashboard/information/base.html.twig"%}

{% block title %}Dashboard - Mes documents{% endblock %}

{% block functionality %}
<div class="container-fluid">
    <div class="container">
        <div class="row">
            <div class="col-12">
                {% if documents is not null %}
                    <table class="table">
                        <thead>
                            <tr class="text-center">
                                <th scope="col"> Ajouter</th>
                                <th scope="col">Titre de votre document uploader</th>
                                <th scope="col">Télécharger</th>
                                <th scope="col">Voir le document</th>
                                <th scope="col">Supprimer</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for document in documents %} 
                                <tr class="text-center">
                                    <td> 
                                        <span class="form-check d-flex justify-content-center">
                                            <input class="form-check-input" type="checkbox" value="" id="flexCheckChecked" checked>
                                        </span>
                                    </td>
                                    <th scope="row">{{ document.label }}</th>
                                    <td>
                                        <a href="{{ path('document.download', {'id': document.id, 'token' : document.label}) }}" class="btn btn-outline-primary">
                                            <i class="fas fa-download"></i>
                                        </a>
                                    </td>
                                    <td>
                                        <a href="{{ path('document.display', {'id' : document.id, 'token' : document.label}) }}" class="btn btn-outline-primary">
                                            <i class="far fa-eye"></i>
                                        </a>
                                    </td>
                                    <td>
                                        <a href="{{ path('document.delete', {'id' : document.id}) }}" class="btn btn-outline-danger">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                {% else %}
                    <h2 class="mt-3">Vous n'avez aucun document</h2>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}